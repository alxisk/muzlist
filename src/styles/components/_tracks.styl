.tracks
  font-size: 14px
  line-height: 18px
  color: $white

  &__list
    display: flex
    justify-content: center
    flex-wrap: wrap

.track
  flex: 0 1 48.6%
  margin-top: 5px
  margin-bottom: 5px
  margin-left: 0.7%
  margin-right: 0.7%
  border-radius: 3px
  background: lighten($dark, 10%)
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.35)
  cursor: pointer
  transition: 0.2s
  overflow: hidden

  &:hover
    background: lighten($dark, 20%)
    box-shadow: -5px 5px 5px rgba(0, 0, 0, 0.4)
    transform: translate(3px, -3px);

  @media $mq-sm
    flex-basis: 98.6%

  &__wrap
    display: flex
    align-items: center
    width: 100%

  &__img
    flex: 0 1 100px
    height: 100px
    font-size: 12px
    line-height: 16px
    text-align: center
    word-break: break-all

  &__title
    flex: 0 1 auto
    padding-left: 4%
    padding-right: 4%
